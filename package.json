{
    "name": "soundprofit-market-root",
    "version": "1.0.0",
    "description": "SoundProfit Market - Decentralized Music Marketplace",
    "scripts": {
        "start": "node backend_api/index.js",
        "dev": "cd backend_api && npm run dev",
        "install-all": "npm install && cd backend_api && npm install",
        "init-db": "cd backend_api && node init-db.js",
        "build": "echo 'Building production bundle...' && npm run install-all",
        "deploy": "npm run build && npm run init-db && npm start",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:restart": "docker-compose restart",
        "test": "cd backend_api && npm test",
        "lint": "echo 'Linting code...'",
        "clean": "rm -rf node_modules backend_api/node_modules"
    },
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "bcrypt": "^5.1.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "aws-sdk": "^2.1450.0",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "morgan": "^1.10.0",
        "joi": "^17.11.0",
        "nodemailer": "^6.9.7",
        "multer-s3": "^2.10.0"
    },
    "engines": {
        "node": ">=14.x",
        "npm": ">=6.x"
    },
    "keywords": [
        "music",
        "marketplace",
        "blockchain",
        "cryptocurrency",
        "NFT",
        "decentralized"
    ],
    "author": "SoundProfit Market",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/soundprofit-market"
    }
}